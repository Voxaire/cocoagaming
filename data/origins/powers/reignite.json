{
    "hidden": true,
    "type": "origins:action_over_time",
    "interval": 1,
    "entity_action": {
        "type": "origins:if_else",
        "condition": {
            "type": "origins:resource",
            "resource": "origins:heat",
            "comparison": "==",
            "compare_to": 1
        },
        "if_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:resource",
                "resource": "origins:counter",
                "comparison": "<=",
                "compare_to": 200
            },
            "if_action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:set_on_fire",
                        "duration": 1
                    },
                    {
                        "type": "origins:change_resource",
                        "resource": "origins:counter",
                        "change": 1
                    }
                ]
            },
            "else_action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:change_resource",
                        "resource": "origins:heat",
                        "change": -1
                    },
                    {
                        "type": "origins:change_resource",
                        "resource": "origins:counter",
                        "change": -400
                    }
                ]
            }
        },
        "else_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:change_resource",
                    "resource": "origins:heat",
                    "change": -1
                },
                {
                    "type": "origins:change_resource",
                    "resource": "origins:counter",
                    "change": -400
                }
            ]
        }
    }
}