{
    "type": "origins:active_self",
    "name": "Surge of Fire",
    "description": "On use the user becomes set on fire and cannot be extinguished by most means for 10 seconds, any normal, bow and crossbow attacks set targets on fire for 4 seconds. Due to sudden burst of fire, the user takes 1 heart of damage as recoil and lose some hunger on activation.",
    "entity_action": {
        "type": "origins:if_else",
        "condition": {
            "type": "origins:health",
            "comparison": ">",
            "compare_to": 2
        },
        "if_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:heal",
                    "amount": -2
                },
                {
                    "type": "origins:exhaust",
                    "amount": 2
                },
                {
                    "type": "origins:set_on_fire",
                    "duration": 1
                },
                {
                    "type": "origins:change_resource",
                    "resource": "origins:heat",
                    "change": 1
                },
                {
                    "type": "origins:change_resource",
                    "resource": "origins:counter",
                    "change": 200
                },
                {
                    "type": "origins:play_sound",
                    "sound": "minecraft:entity.player.hurt_on_fire"
                },
                {
                    "type": "origins:delay",
                    "ticks": 200,
                    "action": {
                        "type": "origins:change_resource",
                        "resource": "origins:heat",
                        "change": -1
                    }
                }
            ]
        },
        "else_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:play_sound",
                    "sound": "minecraft:entity.player.hurt_sweet_berry_bush"
                }
            ]
        }
    },
    "cooldown": 500,
    "hud_render": {
        "should_render": true,
        "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_02.png",
        "bar_index": 19
    }
