{
    "type": "origins:active_self",
    "name": "Surge of Fire",
    "description": "On use the user becomes set on fire and cannot be extinguished by *almost* any means for 10 seconds, any attacks set targets on fire for 4 seconds. Due to sudden burst of fire, the user takes 1 heart of damage as recoil on activation.",
    "entity_action": {
        "type": "origins:if_else",
        "condition": {
            "type": "origins:health",
            "comparison": ">",
            "compare_to": 2
        },
        "if_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:heal",
                    "amount": -2
                },
                {
                    "type": "origins:exhaust",
                    "amount": 3
                },
                {
                    "type": "origins:set_on_fire",
                    "duration": 1
                },
                {
                    "type": "origins:change_resource",
                    "resource": "origins:heat",
                    "change": 1
                },
                {
                    "type": "origins:change_resource",
                    "resource": "origins:counter",
                    "change": -400
                },
                {
                    "type": "origins:play_sound",
                    "sound": "minecraft:entity.player.hurt_on_fire"
                },
                {
                    "type": "origins:delay",
                    "ticks": 200,
                    "action": {
                        "type": "origins:change_resource",
                        "resource": "origins:heat",
                        "change": -1
                    }
                }
            ]
        },
        "else_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:play_sound",
                    "sound": "minecraft:entity.player.hurt_sweet_berry_bush"
                }
            ]
        }
    },
    "cooldown": 600,
    "hud_render": {
        "should_render": true,
        "bar_index": 7
    }
}